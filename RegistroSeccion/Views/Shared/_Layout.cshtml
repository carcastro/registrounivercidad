<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body style="background: -webkit-linear-gradient(90deg, lightgray 25%, lightsteelblue 75%)">
    <header style="background-color: black; color: white; text-align:center">
        <br /><h3> Univercidad  registro de sección </h3><br />
    </header>
    <nav class="row" style="background-color: gray; height: 40px; margin: 1px 1px 1px 1px">
        <div class="btn-group">
            <button class="btn btn-primary" onclick="location.href ='../Seccion/Index'">Sección</button>
            <button class="btn btn-primary" onclick="location.href = '../Alumno/Index'">Alumnos</button>
        </div>
    </nav>
    <main class="row" style="margin: 2% 2% 2% 2%; background-color: beige; width: 96%">
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer style="background-color: black; color: white; text-align:center">
        <br /><small>Todos los derechos reservados.</small><br /><br />
    </footer>
</body>
</html>
